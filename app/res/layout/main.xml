<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/map1"
        android:layout_marginTop="-40px"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/hello" 
        />
    
	<LinearLayout 
	    android:id="@+id/homebuttons"
	    android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:layout_weight="2"
    	android:orientation="horizontal" 
    	android:layout_gravity="center_horizontal">
	    
	    <Button
	        android:id="@+id/btn_nearby"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Near By"
	    	android:onClick="onClk_Nearby"
	    	android:drawableTop="@drawable/nearby"
	    	
	    	/>	    
	    <Button
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Search"
	    	android:onClick="onClk_Search"
	    	android:drawableTop="@drawable/search"
	    	/>    
	    <Button
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Catalog"
	    	android:onClick="onClk_Catalog"
	    	android:drawableTop="@drawable/catalog"
	    	/>
	    <Button
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Add"
	    	android:onClick="onClk_Add"
	    	android:drawableTop="@drawable/add"
	    	/>
	        
	</LinearLayout>
    
    
</LinearLayout>